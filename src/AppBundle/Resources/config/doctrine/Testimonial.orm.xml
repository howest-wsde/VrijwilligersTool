<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Testimonial" table="testimonial">
    <indexes>
      <index name="FKTestimonia20655" columns="Sender"/>
      <index name="FKTestimonia893114" columns="Receiver"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="Id" columns="Id"/>
    </unique-constraints>
    <id name="id" type="integer" column="Id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="value" type="string" column="Value" length="2000" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="lastUpdate" type="datetime" column="last_update" nullable="true">
      <options>
        <option name="default">CURRENT_TIMESTAMP</option>
      </options>
    </field>
    <many-to-one field="sender" target-entity="Volunteer" fetch="LAZY">
      <join-columns>
        <join-column name="Sender" referenced-column-name="Id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="receiver" target-entity="Volunteer" fetch="LAZY">
      <join-columns>
        <join-column name="Receiver" referenced-column-name="Id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
