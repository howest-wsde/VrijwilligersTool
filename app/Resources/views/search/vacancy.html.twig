{% trans_default_domain "views" %}
<article>
	<header><h1><a href="{{ path("vacancy_by_urlid", { "urlid": vacancy.urlId }) }}">{{ vacancy.title }}</a></h1></header>
	<div>
		<p>{{ vacancy.description }}</p>
		<p>{{ "search.vacancy.offer"|trans }}</p>
	</div>
	<div>
		<p>{{ "search.vacancy.enddate"|trans|capitalize }}: {{ vacancy.startdate|date("Y-m-d") }}</p>
		<p>{{ "general.org"|trans|capitalize }}: {{ vacancy.organisation.name }}</p>
		<p>{{ "search.vacancy.location"|trans|capitalize }}: {{ vacancy.organisation.street }}</p>
	</div>
</article>
