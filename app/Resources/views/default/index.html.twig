{% extends 'base.html.twig' %}

{% block outerbody %}
 
    {% embed "default/carousel.html.twig" %}{% endembed %}

    <div class="container"> 
        <section class="col-md-12"><div id="handenuitmouwen" class="grijzeblok"> 
            <h2>Zin om de handen uit de mouwen te steken? </h2>
            {% embed "search/basic_search.html.twig" with { 'withHistory': false } %}{% endembed %}
        </div></section>

        {% embed "default/infoblokken.html.twig" %}{% endembed %}
    </div>
 
    <section id="verenigingenindekijker" data-role="Promoted organisations block">
        <div class="container">
            <h2>Organisaties in de kijker</h2> 
            {{ render(controller("AppBundle:Organisation:ListRecentOrganisations", { "nr": 3, "viewMode": "tile" } )) }}
        </div>
    </section> 

    <div class="container">
        <section data-role="Recent vacancies block">
            <h2>Vacatures in de kijker</h2>
            {{ render(controller("AppBundle:Vacancy:ListRecentVacancies", { "nr": 6, "viewMode": "tile"} )) }}
        </section>
        <section data-role="newsletter">
            <h2>Wil je mee zijn met de laatste nieuwtjes?  Schrijf je dan in voor onze nieuwsbrief!</h2>
            {# TODO: nieuwsbrief implementeren #}
        </section>
    </div>
{% endblock %}
