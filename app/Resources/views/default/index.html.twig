{% extends 'base.html.twig' %}

{% block outerbody %}
 
    {% embed "default/carousel.html.twig" %}{% endembed %}

    <div class="part">
        <div class="container"> 
            <section class="col-md-12">
                <div id="handenuitmouwen" class="blok special">
                    <h2>Zin om de handen uit de mouwen te steken? </h2>
                    {% embed "search/basic_search.html.twig" with { 'withHistory': false } %}{% endembed %}
                </div>
            </section>

            {% embed "default/infoblokken.html.twig" %}{% endembed %}
        </div> 
    </div>

    <div class="part">
        <section id="verenigingenindekijker" data-role="Promoted organisations block">
            <div class="container">
                <h2>Organisaties in de kijker</h2> 
                {{ render(controller("AppBundle:Organisation:ListRecentOrganisations", { "nr": 3, "viewMode": "tile" } )) }}
            </div>
        </section> 
    </div>

    <div class="part">
        <section id="vacaturesindekijker" data-role="Recent vacancies block" class="part">
            <div class="container">
                <h2>Vacatures in de kijker</h2>
                {{ render(controller("AppBundle:Vacancy:ListRecentVacancies", { "nr": 4, "viewMode": "tile"} )) }}
            </div>
        </section>
    </div>

    <section data-role="newsletter" class="part">
        <div class="container">
            <section class="col-md-12">
                <div class="blok special">
                    <h2>Wil je mee zijn met de laatste nieuwtjes?  Schrijf je dan in voor onze nieuwsbrief!</h2>
                    {# TODO: nieuwsbrief implementeren #}
                    <form>
                        <input type="email" name="mailadres" placeholder="e-mailadres" />
                        <input type="submit" value="inschrijven" />
                    </form>
                </div>
            </section>
        </div>
    </section>
{% endblock %}
