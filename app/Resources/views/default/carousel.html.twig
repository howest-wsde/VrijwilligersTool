{% trans_default_domain "views" %}
     <div id="carouselhome">

        <!-- Carousel
        ================================================== -->
        <div id="indexHeader" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <div class="container slide slide1">
                  <h1>{{ "def.carousel.title"|trans }}</h1>
                  <div class="box">
                    <p>{{ "def.carousel.difference"|trans }}</p>
                    <p><a class="cta" href="{{ path("self_profile") }}" role="button">{{ "def.carousel.participate"|trans }}</a></p>
                  </div>
              </div>
            </div>
            <div class="item">
              <div class="container slide slide2">
                  <h1>{{ "def.carousel.info"|trans }}</h1>
                  <div class="box">
                    <p>{{ "def.carousel.infoteaser"|trans }}</p>
                    <p><a class="cta" href="{{ path("info_algemeen") }}" role="button">{{ "def.carousel.more"|trans }}</a></p>
                  </div>
              </div>
            </div>
            <div class="item">
              <div class="container slide slide3">
                <iframe src="{{ path("googlemap") }}"></iframe>
              </div>
            </div>
          </div>
          <a class="left carousel-control" href="#indexHeader" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>{# TODO: moet dit ook vertaald worden? #}
          </a>
          <a class="right carousel-control" href="#indexHeader" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

          <ol class="slidetoggle">
            <li data-target="#indexHeader" data-slide-to="0">slide 1</li>
            <li data-target="#indexHeader" data-slide-to="1">slide 2</li>
            <li data-target="#indexHeader" data-slide-to="2">slide 3</li>
          </ol>
          <!-- /.carousel -->
    </div>