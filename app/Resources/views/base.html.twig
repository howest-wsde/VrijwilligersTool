<!DOCTYPE html>
<html lang="nl">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Talent Roeselen{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous" />
            <link rel="stylesheet" type="text/css" href="{{ asset("style/reset.css") }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset("style/vrijwilligt.css") }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset("style/search.css") }}" />
        {% endblock %}
        <script>
            var RV_GLOBALS = {
                "searchURL": "{{ path("api_search") }}",
                "usersearchURL": "{{ path("api_usersearch") }}",
            }
            {#
                //use this pattern to add globals to the RV_GLOBALS module.  That way we only ever have one global variable that can potentially have name-spacing collisions with external globals (highly unlikely)
                RV_GLOBALS = (function (previous) {
                    if(!previous.searchURL){
                        previous.searchURL = "{{ path("api_search") }}";
                    }

                    return previous;
                }(RV_GLOBALS || {}));
            #}
        </script>
        <link rel="icon" type="image/x-icon" href="{{ asset("favicon.ico") }}" />
        {%  block head %} {% endblock %}
    </head>
    <body>
        {% block header %}
            <header>
                <div class="logo">
                    <h1><a href="{{ path("homepage") }}"><span>Roeselare vrijwilligt</span></a></h1>
                    <span class="baseline">Baseline</span>
                </div>
                {% embed "search/basic_search.html.twig"%}{% endembed %}
                <nav class="about nav">
                    <ul>
                        <li><a href="{{ path("info_over_ons") }}">Over ons</a></li>
                        <li><a href="{{ path("info_contact") }}">Contact</a></li>
                        {% if app.user %}<li><a href="{{ path("profile_edit") }}">profiel aanpassen</a></li>{% endif %}
                    </ul>
                </nav>
                <nav class="top nav">
                    <ul>
                        <li><a href="{{ path("self_profile") }}">Mijn profiel</a></li>
                        <li><a href="{{ path("register_user") }}">Vrijwilliger worden</a></li>
                        <li><a href="{{ path("start_vacancy") }}">Vrijwilliger vinden</a></li>
                        <li><a href="{{ path("info_vrijwilligersinfo") }}">Vrijwilligersinfo</a></li>
                        <li><a href="{{ path("tests") }}">Tests</a></li>
                        <li>{% if app.user %}
                            <a href="{{ path("logout") }}">Uitloggen</a>
                            {% else %}
                            <a href="{{ path("login") }}">Inloggen</a>
                            {% endif %}</li>
                    </ul>
                </nav>
            </header>
        {% endblock %}
        <main>
            {% block body %}
            {% endblock %}
        </main>
        {% block footer %}
            <nav class="bottom nav">
                <section>
                    <header><h1>Recente vacatures</h1></header>
                    {{ render(controller("AppBundle:Vacancy:listRecentVacancies", { "nr": 5 } )) }}
                </section>
                <section>
                    <header><h1>Recente verenigingen</h1></header>
                    {{ render(controller("AppBundle:Organisation:listRecentOrganisations", { "nr": 5 } )) }}
                </section>
                <section>
                    {{ render(controller("AppBundle:Vacancy:listParentSkills", { "nr": 10 } )) }}
                </section>
                <section>
                    <header><h1>Vrijwilligersinfo</h1></header>
                    <ul>
                        <li><a href="{{ path("info_wetgeving") }}">Wetgeving</a></li>
                        <li><a href="{{ path("info_profiel") }}">Profiel van een vrijwilliger</a></li>
                        <li><a href="{{ path("info_vrijwilligersinfo") }}">Wat is vrijwilligerswerk</a></li>
                        <li><a href="{{ path("info_waarom") }}">Moeder waarom vrijwilligen wij? </a></li>
                        <li><a href="{{ path("info_spelregels") }}">Spelregels</a></li>
                        <li><a href="{{ path("info_faq") }}">Veelgestelde vragen</a></li>
                    </ul>
                </section>
                <section>
                    <header><h1>Tests</h1></header>
                    <ul>
                        <li><a href="{{ path("test_type") }}">Welk type vrijwilliger ben ik? </a></li>
                        <li><a href="{{ path("test_taal") }}">Taaltest</a></li>
                        <li><a href="{{ path("test_comp") }}">Computervaardigheidstest</a></li>
                    </ul>
                </section>
                <section>
                    <header><h1>Roeselare vrijwilligt</h1></header>
                    <ul>
                        <li><a href="{{ path("info_over_ons") }}">Over ons</a></li>
                        <li><a href="{{ path("info_contact") }}">Contact</a></li>
                    </ul>
                </section>
            </nav>
            <section class="partners">
                <ul>
                    <li><a href="" target="_blank"><span>X logo</span></a></li>
                    <li><a href="" target="_blank"><span>X logo</span></a></li>
                    <li><a href="" target="_blank"><span>X logo</span></a></li>
                    <li><a href="" target="_blank"><span>X logo</span></a></li>
                </ul>
            </section>
            <footer>
                <address>
                    <span>Botermarkt 2</span>
                    <span>8800 Roeselare</span>
                    <span class="nav"><a href="mailto:info@talentroeselen.be">info@talentroeselen.be</a></span>
                    <span>051 26 21 11</span>
                </address>
                <div class="legal nav">
                    <span>&copy; 2016 <a href="http://www.howest.be" target="_blank">Howest</a> &amp; <a href="http://www.roeselare.be" target="_blank">Stad Roeselare</a></span>
                    <span><a href="{{ path("info_privacy_and_legal") }}">Privacy en legale voorwaarden</a></span>
                </div>
            </footer>
        {% endblock %}
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
            {#
            <script type="text/javascript" src="https://www.google.com/jsapi"></script>
            <script type="text/javascript">
               google.load("jquery", "1.4.2");
            </script>
            #}
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
            <script src="{{ asset("js/tmp_bootstrap.js") }}"></script>
            <script src="{{ asset("js/search.js") }}"></script>
        {% endblock %}
    </body>
</html>
