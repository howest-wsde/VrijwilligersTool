{% if newCharge is not empty %}
<h2>{{ "newCharge.header.title" |trans }}</h2>
<table>
    <tr>
        <th>{{ "newCharge.table.header.firstname"| trans }}</th>
        <th>{{ "newCharge.table.header.lastname"|trans }}</th>
        <th>{{ "newCharge.table.header.username" |trans }}</th>
        <th>{{ "newCharge.table.header.link"|trans }}</th>
    </tr>
    {% for entry in newCharge %}
        <tr>
            <td>{{ entry.charge.firstname }}</td>
            <td>{{ entry.charge.lastname }}</td>
            <td>{{ entry.charge.username }}</td>
            <td>
                <a href="{{ url('person_username', {'username': entry.charge.username }) }}">{{ "newCharge.table.data.profile"|trans }}</a>
            </td>
        </tr>
    {% endfor %}
</table>
{% endif %}

{% if newVacancy is not empty %}
<h2>{{ "newVacancy.header.title"|trans }}</h2>
<table>
    <tr>
        <th>{{ "newVacancy.table.header.title"|trans }}</th>
        <th>{{ "newVacancy.table.header.startdate" |trans }}</th>
        <th>{{ "newVacancy.table.header.enddate" |trans }}</th>
        <th>{{ "newVacancy.table.header.link" | trans }}</th>
    </tr>
    {% for entry in newVacancy %}
        <tr>
            <td>{{ entry.vacancy.title }}</td>
            <td>{{ entry.vacancy.startdate|date("d/m/Y") }}</td>
            <td>{{ entry.vacancy.enddate|date("d/m/Y") }}</td>
            <td>
                <a href="{{ url('vacancy_by_urlid', {'urlid': entry.vacancy.urlid }) }}">{{ "newVacancy.table.data.vacancy" |trans }}</a>
            </td>
        </tr>
    {% endfor %}
</table>
{% endif %}

