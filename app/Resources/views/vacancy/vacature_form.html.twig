{{ form_start(form) }}
    {{ form_errors(form) }}

    <h2 class="steptitle rood"><a href="#algemeen" name="algemeen">Algemene gegevens</a></h2>
    <div class="step actief grijs rood">
        <fieldset>
            {{ form_row(form.title) }}
            {{ form_row(form.summary) }}
            {{ form_row(form.description) }}
            <div class="onerow">{{ form_row(form.wanted) }}</div>
            <div class="onerow">{{ form_row(form.enddate) }}</div>
            {{ form_row(form.longterm) }}
            <div class="onerow">{{ form_row(form.estimatedWorkInHours) }}</div>
        </fieldset>
    </div>

    <h2 class="steptitle groen"><a href="#locatie" name="locatie">Waar zal de vrijwilliger werken?</a></h2>
    <div class="step grijs groen">
        <fieldset>
            <div class="row">
                <div class="col-md-7">
                    <div class="col-md-6">
                        {{ form_row(form.street) }}
                    </div>
                    <div class="col-md-3">
                      {{ form_row(form.number) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.bus) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.postalCode) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_row(form.city) }}
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="col-md-12 google">map preview</div>
                </div>
            </div>
        </fieldset>
    </div>

    <h2 class="steptitle geel"><a href="#info" name="info">Meer info</a></h2>
    <div class="step grijs geel">
        <fieldset>
           {{ form_row(form.socialInteraction) }}
            {{ form_row(form.independent) }}
        </fieldset>
    </div>

    <h2 class="steptitle blauw"><a href="#vaardigheden" name="vaardigheden">Vaardigheden</a></h2>
    <div class="step grijs blauw">
        <fieldset>
            {{ form_row(form.skills) }}
        </fieldset>
    </div>

    <h2 class="steptitle rood"><a href="#voordelen" name="voordelen">Voordelen voor de vrijwilliger</a></h2>
    <div class="step grijs rood">
        <fieldset>
            <div class="onerow">{{ form_row(form.renumeration) }}</div>
            {{ form_row(form.otherReward) }}
        </fieldset>
    {{ form_row(form.submit) }}
    {{ form_row(form.save) }}
{{ form_end(form) }}
